{
	"name": "mytril",
	"description": "Mytril Svelte library component for rapidly building modern websites based on Svelte and Sveltekit",
	"version": "0.4.3",
	"author": {
		"name": "Nycolaide",
		"email": "laurent.grimaldi@minedelve.com"
	},
	"license": "MIT",
	"homepage": "https://minedelve.com",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/minedelve/mytril.git"
	},
	"funding": {
		"type": "buymeacoffee",
		"url": "https://buymeacoffee.com/nycolaide"
	},
	"bugs": {
		"url": "https://github.com/minedelve/mytril/issues"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"components",
		"ui-library",
		"component-library",
		"component",
		"mytril",
		"minedelve",
		"design",
		"css",
		"ui",
		"svelte-component",
		"interface",
		"design-system",
		"theming",
		"framework",
		"typescript",
		"library"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"bin": {
		"mytril": "bin/mytril.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/plugins/vite/plugin.d.ts",
			"default": "./dist/plugins/vite/plugin.js"
		},
		"./tools": {
			"types": "./dist/composables/index.d.ts",
			"default": "./dist/composables/index.js"
		},
		"./base": "./dist/base.css",
		"./utilities": "./dist/utilities.css",
		"./components": "./dist/components.css"
	},
	"files": [
		"bin",
		"dist",
		"README.md",
		"LICENSE"
	],
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.7.4",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.8.6",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"publint": "^0.2.12",
		"svelte": "^5.1.9",
		"svelte-check": "^4.0.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.12.2",
		"vite": "^5.4.10"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
